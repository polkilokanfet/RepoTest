<Window x:Class="HVTApp.Services.MessageService.YesNoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MaxHeight="768"
        MaxWidth="1024"
        Title="YesNoWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock Name="Message" Margin="10,5">Message</TextBlock>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="YesButton" Content="Да" Padding="20,5" Click="YesButton_OnClick" Margin="4,4,2,4"/>
            <Button Name="NoButton" Content="Нет" Padding="20,5" Click="NoButton_OnClick" Margin="2,4,4,4"/>
        </StackPanel>
    </Grid>
</Window>
