<Window x:Class="HVTApp.Services.MessageService.YesNoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YesNoWindow" SizeToContent="WidthAndHeight">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Name="Message">Message</TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Name="YesButton" Content="Да" Click="YesButton_OnClick"/>
            <Button Name="NoButton" Content="Нет" Click="NoButton_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>
