<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.Modules.Director.Tabs.TabReload"
                                 Header="Обновление">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Перезагрузить" Command="{Binding ReloadCommand}" SmallImage="/HVTApp.Modules.Director;component/Images/Refresh_16x16.png"/>
        <infRib:ButtonTool Caption="Развернуть всё" Command="{Binding ExpandCommand}"/>
        <infRib:ButtonTool Caption="Свернуть всё" Command="{Binding CollapseCommand}"/>
    </infRib:RibbonGroup>
    
</inf:RibbonTabItemWithViewModel>