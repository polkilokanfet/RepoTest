<Window x:Class="HVTApp.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HVTApp.Views"
        mc:Ignorable="d"
        Title="HVTApp loading..." 
        Height="100" Width="350" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Loading... Please wait..."></TextBlock>
        <!--<ProgressBar x:Name="ProgressBar1" HorizontalAlignment="Center" Width="300" Height="15" Margin="0, 10" IsIndeterminate="True"/>-->
    </StackPanel>
</Window>
