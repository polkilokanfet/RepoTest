<Window x:Class="HVTApp.Services.GetProductService.ProductNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:HVTApp.UI.Views;assembly=HVTApp.UI"
        Title="Создание нового продукта" 
        SizeToContent="WidthAndHeight"
        MinWidth="500">
    
    <StackPanel>

        <views:CreateNewProductTaskDetailsView DataContext="{Binding}" VisibilityProductCreateNewProductTask="Collapsed"/>
        <Button Content="Ok" Command="{Binding SaveCommand}"/>

    </StackPanel>
    
</Window>
