<Window x:Class="HVTApp.Modules.Sales.Views.TenderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:HVTApp.UI.Views;assembly=HVTApp.UI"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        <views:TenderDetailsView DataContext="{Binding}" VisibilityProjectTender="Collapsed"/>
        <Button Content="OK" Command="{Binding SaveCommand}"/>
    </StackPanel>
</Window>
