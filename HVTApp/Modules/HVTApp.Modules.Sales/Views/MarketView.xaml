<inf:ViewBase
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             xmlns:views="clr-namespace:HVTApp.UI.Views;assembly=HVTApp.UI"
             x:Class="HVTApp.Modules.Sales.Views.MarketView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <views:ProjectListView Name="ProjectListView" Grid.Row="0" DataContext="{Binding ProjectListViewModel}"/>
        <GridSplitter Grid.Row="1" Height="5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <views:ProjectDetailsView Name="ProjectDetailsView" Grid.Row="2" DataContext="{Binding ProjectDetailsViewModel}"/>

    </Grid>

</inf:ViewBase>