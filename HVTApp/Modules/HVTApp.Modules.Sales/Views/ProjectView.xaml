<inf:ViewBase x:Class="HVTApp.Modules.Sales.Views.ProjectView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:views1="clr-namespace:HVTApp.UI.Views;assembly=HVTApp.UI"
              xmlns:controls1="clr-namespace:HVTApp.UI.Controls;assembly=HVTApp.UI"
              x:Name="Root">

    <DockPanel LastChildFill="True">
        <views1:ProjectDetailsView DockPanel.Dock="Top" DataContext="{Binding}" x:Name="ProjectDetailsView" ManagerVisibility="Collapsed"/>
        <controls1:UnitListControl UnitsGroups="{Binding Groups}"
                                  SelectedUnitsGroup="{Binding SelectedGroup, Mode=OneWayToSource}"
                                  SelectedProductIncluded="{Binding SelectedProductIncluded, Mode=OneWayToSource}"
                                  AddCommand="{Binding AddCommand}"
                                  RemoveCommand="{Binding RemoveCommand}"
                                  RefreshCommand="{Binding RefreshCommand}"
                                  ChangeFacilityCommand="{Binding ChangeFacilityCommand}"
                                  ChangeProductCommand="{Binding ChangeProductCommand}"
                                  ChangePaymentsCommand="{Binding ChangePaymentsCommand}"
                                  AddProductIncludedCommand="{Binding AddProductIncludedCommand}"
                                  RemoveProductIncludedCommand ="{Binding RemoveProductIncludedCommand}"/>
    </DockPanel>
</inf:ViewBase>
