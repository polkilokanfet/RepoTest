<inf:ViewBase xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:infg="http://infragistics.com/DataPresenter"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:converters="clr-namespace:HVTApp.Infrastructure.Converters;assembly=HVTApp.Infrastructure"
              xmlns:views="clr-namespace:HVTApp.UI.Views;assembly=HVTApp.UI"
              xmlns:controls="clr-namespace:HVTApp.Modules.Sales.Controls"
              x:Class="HVTApp.Modules.Sales.Views.SpecificationsView">

    <Grid>
            
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:SpecificationLookupListView Grid.Row="0" 
                                           DataContext="{Binding}"
                                           UnitsVisibility="Collapsed"/>
            
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="5"/>

        <GroupBox Grid.Row="2" Header="Оборудование">
            <controls:UnitListControl x:Name="UnitListView" DataContext="{Binding Groups}" />
        </GroupBox>
    </Grid>

</inf:ViewBase>

	