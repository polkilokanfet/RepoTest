<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             x:Class="HVTApp.Modules.Sales.Menus.TabProjects"
             Header="Projects Tab">
    <infRib:RibbonGroup Caption="Project">
        <infRib:ButtonTool Caption="New project" Command="{Binding NewProjectCommand}" 
                           SmallImage="/HVTApp.Modules.Sales;component/Images/newProject16.png" 
                           LargeImage="/HVTApp.Modules.Sales;component/Images/newProject32.png"/>
        <infRib:ButtonTool Caption="Update project" Command="{Binding UpdateProjectCommand}" 
                           SmallImage="/HVTApp.Modules.Sales;component/Images/changeProject16.png"
                           LargeImage="/HVTApp.Modules.Sales;component/Images/changeProject32.png"/>
    </infRib:RibbonGroup>
</inf:RibbonTabItemWithViewModel>



