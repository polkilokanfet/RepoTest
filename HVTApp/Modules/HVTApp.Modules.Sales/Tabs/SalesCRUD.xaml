<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.Modules.Sales.Tabs.SalesCRUD"
             Header="Продажи">
    <infRib:RibbonGroup Caption="Проект">
        <infRib:ButtonTool Caption="Создать" Command="{Binding NewProjectCommand}"/>
        <infRib:ButtonTool Caption="Изменить" Command="{Binding EditProjectCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveProjectCommand}"/>
    </infRib:RibbonGroup>
    <infRib:RibbonGroup Caption="Тендер">
        <infRib:ButtonTool Caption="Создать" Command="{Binding NewTenderCommand}"/>
        <infRib:ButtonTool Caption="Изменить" Command="{Binding EditTenderCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveTenderCommand}"/>
    </infRib:RibbonGroup>
    <infRib:RibbonGroup Caption="ТКП">
        <infRib:ButtonTool Caption="Создать" Command="{Binding NewOfferCommand}"/>
        <infRib:ButtonTool Caption="Изменить" Command="{Binding EditOfferCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveOfferCommand}"/>
    </infRib:RibbonGroup>
</inf:RibbonTabItemWithViewModel>
