<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.Modules.Sales.Tabs.TabCrudUnits"
             Header="Редактирование оборудования">

    <infRib:RibbonGroup Caption="Основное">
        <infRib:ButtonTool Caption="Добавить" Command="{Binding AddCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveCommand}"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Включенное">
        <infRib:ButtonTool Caption="Добавить" Command="{Binding AddProductIncludedCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveProductIncludedCommand}"/>
    </infRib:RibbonGroup>
    
    <infRib:RibbonGroup Caption="Обновить">
        <infRib:ButtonTool Caption="Обновить" Command="{Binding RefreshCommand}"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
