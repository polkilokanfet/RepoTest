<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             x:Class="HVTApp.Modules.Sales.Tabs.TabProjects"
             Header="Отображение">
    
    <infRib:RibbonGroup Caption="Показать">
        <infRib:ButtonTool Caption="Все проекты" Command="{Binding ShowAllProjectsCommand}"/>
        <infRib:ButtonTool Caption="В работе" Command="{Binding ShowWorkProjectsCommand}"/>
    </infRib:RibbonGroup>
    
</inf:RibbonTabItemWithViewModel>



