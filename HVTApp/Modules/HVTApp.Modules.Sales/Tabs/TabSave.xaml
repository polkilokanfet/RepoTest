<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.Modules.Sales.Tabs.TabSave"
                                 Header="Сохранение">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Отменить" Command="{Binding GoBackCommand}"/>
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveCommand}" />
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>