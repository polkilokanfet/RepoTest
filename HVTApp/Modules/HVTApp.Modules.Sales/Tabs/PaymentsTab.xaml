<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.Modules.Sales.Tabs.PaymentsTab"
             Header="Поступления">

    <infRib:RibbonGroup Caption="Редактирование">
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveCommand}"/>
        <infRib:ButtonTool Caption="Обновить" Command="{Binding RefreshCommand}"/>
        <infRib:ButtonTool Caption="Перезагрузить" Command="{Binding ReloadCommand}"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Сохранение">
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveCommand}"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
