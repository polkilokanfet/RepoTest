<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.UI.Tabs.TabPartPriceCRUD"
             Header="Себестоимость">
    <infRib:RibbonGroup Caption="Form">
        <infRib:ButtonTool Caption="Создать" Command="{Binding NewPriceCommand}"/>
        <infRib:ButtonTool Caption="Изменить" Command="{Binding EditPriceCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemovePriceCommand}"/>
    </infRib:RibbonGroup>
</inf:RibbonTabItemWithViewModel>