<UserControl x:Class="HVTApp.UI.Controls.SaveButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ContentControl Grid.Row="0" Content="{Binding Details, ElementName=control}"/>
        <Button Grid.Row="1" Content="Save" Command="{Binding SaveCommand}" Padding="10,2" Margin="5"/>
        
    </Grid>
</UserControl>
