<inf:ViewBase x:Class="HVTApp.UI.Views.ProjectDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:controls="clr-namespace:HVTApp.UI.Controls"
             xmlns:dataPresenter="http://infragistics.com/DataPresenter"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Название"/>
        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Item.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="1" Content="Оборудование:"/>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <dataPresenter:XamDataGrid Grid.Column="0" 
                              DataSource="{Binding Item.ProjectUnits, Converter={StaticResource ProductUnitsToProductGroupsConverter}}"
                              SelectedDataItem="{Binding ProductGroup, Mode=TwoWay}">
                <dataPresenter:XamDataGrid.FieldLayouts>
                    <dataPresenter:FieldLayout Key="ProductUnitsGroup">
                        <dataPresenter:FieldLayout.Fields>
                            <dataPresenter:TextField Name="Facility" Label="Объект"/>
                            <dataPresenter:TextField Name="Product" Label="Оборудование"/>
                            <dataPresenter:NumericField Name="Amount" Label="Количество"/>
                            <dataPresenter:NumericField Name="Cost" Label="Стоимость"/>
                        </dataPresenter:FieldLayout.Fields>
                    </dataPresenter:FieldLayout>
                </dataPresenter:XamDataGrid.FieldLayouts>
            </dataPresenter:XamDataGrid>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button Command="{Binding AddProjectUnitsCommand}" Content="+"/>
                <Button Command="{Binding ChangeProjectUnitsCommand}" Content="~"/>
            </StackPanel>
        </Grid>
    </Grid>

</inf:ViewBase>













