<inf:ViewBase x:Class="HVTApp.UI.Views.FacilityListView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:infg="http://infragistics.com/DataPresenter"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure">

    <infg:XamDataGrid>
        <infg:XamDataGrid.FieldLayouts>
            <infg:FieldLayout>
                <infg:FieldLayout.Fields>
                    <infg:TextField Name="Name" Label="Name" Width="Auto"/>
                    <infg:TextField Name="Id" Label="Id" Width="Auto"/>

                    <infg:TextField Name="Type" Label="Type" Width="Auto" Converter="{StaticResource LookupToStringConverter}"/>
                    <infg:TextField Name="OwnerCompany" Label="OwnerCompany" Width="Auto" Converter="{StaticResource LookupToStringConverter}"/>
                    <infg:TextField Name="Address" Label="Address" Width="Auto" Converter="{StaticResource LookupToStringConverter}"/>

                </infg:FieldLayout.Fields>
            </infg:FieldLayout>

        </infg:XamDataGrid.FieldLayouts>
    </infg:XamDataGrid>


</inf:ViewBase>