<Window x:Class="HVTApp.Services.PopupNotificationsService1.PopupWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Уведомление" 
        Height="150"
        Width="400" 
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Button Click="OpenButton_OnClick" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="TextBlock" TextWrapping="WrapWithOverflow"/>
        </Button>
    </ScrollViewer>
</Window>
