<Window x:Class="HVTApp.Services.PopupNotificationsService1.PopupWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Уведомление" 
        Width="400" 
        ResizeMode="NoResize"
        SizeToContent="Height"
        Loaded="Window_Loaded">
    
    <StackPanel>
        <ScrollViewer Margin="5" CanContentScroll="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="TextBlock"/>
        </ScrollViewer>
        <Button x:Name="OpenButton" Content="Открыть" Click="OpenButton_OnClick"></Button>
    </StackPanel>
</Window>
