<UserControl x:Class="HVTApp.UI.PriceEngineering.Messages.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto"
             Width="Auto">

    <Border CornerRadius="10" 
            Padding="1"
            Margin="2 0 2 2"
            BorderBrush="LightBlue"
            BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Шапка-->
            <Border 
                Background="AliceBlue" 
                Padding="5" 
                CornerRadius="5 5 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Автор-->
                    <TextBlock Grid.Column="0" Text="{Binding Author, Mode=OneWay, Converter={StaticResource ObjectToStringConverter}}"/>
                    <!--Момент-->
                    <TextBlock Grid.Column="1" Text="{Binding Moment, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}" HorizontalAlignment="Right"/>

                </Grid>
            </Border>

            <!--Сообщение-->
            <Border Grid.Row="1" 
                    Background="White"  
                    Padding="5"
                    CornerRadius="0 0 8 8">
                <TextBox Text="{Binding Message, Mode=OneWay}"
                         TextWrapping="Wrap"
                         IsReadOnly="True"
                         BorderThickness="0"/>
            </Border>

        </Grid>
    </Border>

</UserControl>
