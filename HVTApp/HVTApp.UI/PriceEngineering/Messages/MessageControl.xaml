<UserControl x:Class="HVTApp.UI.PriceEngineering.Messages.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:messages="clr-namespace:HVTApp.UI.PriceEngineering.Messages"
             xmlns:converters="clr-namespace:HVTApp.UI.PriceEngineering.Converters"
             Height="Auto"
             Width="Auto">

    <UserControl.Resources>
        <messages:PriceEngineeringTaskMessageToColorConverter x:Key="ToColorConverter"/>
        <converters:PriceEngineeringTaskMessageVisibilityConverter x:Key="MessageVisibilityConverter"/>
        <converters:PriceEngineeringTaskStatusMessageVisibilityConverter x:Key="StatusMessageVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal"
                    Visibility="{Binding Converter={StaticResource StatusMessageVisibilityConverter}}">

            <TextBlock VerticalAlignment="Top" Text="{Binding Moment, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}"/>
            <TextBox Text="{Binding Message, Mode=OneWay}" 
                     VerticalAlignment="Top"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     Background="Transparent"
                     BorderThickness="0"/>

        </StackPanel>
        <Border Visibility="{Binding Converter={StaticResource MessageVisibilityConverter}}" 
                CornerRadius="10" 
                Padding="0"
                Margin="2 0 2 2"
                BorderBrush="{Binding Converter={StaticResource ToColorConverter}}"
                BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--Шапка-->
                <Border 
                    Background="{Binding Converter={StaticResource ToColorConverter}}" 
                    Padding="5" 
                    CornerRadius="5 5 0 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!--Момент-->
                        <TextBlock Grid.Column="0" Text="{Binding Moment, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}" HorizontalAlignment="Left"/>
                        <!--Автор-->
                        <TextBlock Grid.Column="1" Text="{Binding Author, Mode=OneWay, Converter={StaticResource ObjectToStringConverter}}" HorizontalAlignment="Left"/>

                    </Grid>
                </Border>

                <!--Сообщение-->
                <Border Grid.Row="1" 
                        Background="White"  
                        Padding="5"
                        CornerRadius="0 0 8 8">
                    <TextBox Text="{Binding Message, Mode=OneWay}"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             BorderThickness="0"/>
                </Border>

            </Grid>
        </Border>
    </Grid>

</UserControl>
