<UserControl x:Class="HVTApp.UI.PriceEngineering.View.PriceEngineeringTaskBlocksAddedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:HVTApp.UI.PriceEngineering.View"
             xmlns:converters="clr-namespace:HVTApp.UI.PriceEngineering.Converters"
             x:Name="Root">

    <UserControl.Resources>
        <converters:PriceEngineeringTaskViewModelConstructorIsTargetTaskVisibilityConverter x:Key="ConstructorIsTargetTaskVisibilityConverter" />
    </UserControl.Resources>

    <!--Дополнительные блоки-->
    <GroupBox Header="Дополнительные блоки"
              DataContext="{Binding ElementName=Root, Path=TaskViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ListBox 
                    ItemsSource="{Binding ProductBlocksAdded}" 
                    SelectedItem="{Binding SelectedBlockAdded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <view:BlockAddedControl ProductBlockAdded="{Binding}" Margin="5" Visibility="{Binding IsRemoved, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityReverseConverter}}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

            <Grid Grid.Row="1" 
                  Visibility="{Binding Converter={StaticResource ConstructorIsTargetTaskVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Добавить" Command="{Binding AddBlockAddedCommand}"/>
                <Button Grid.Column="1" Content="Комплект" Command="{Binding AddBlockAddedComplectCommand}"/>
                <Button Grid.Column="2" Content="Удалить" Command="{Binding RemoveBlockAddedCommand}"/>
            </Grid>

        </Grid>
    </GroupBox>

</UserControl>
