            </Grid>

            <!--Переписка-->
            <GridSplitter Grid.Column="2" HorizontalAlignment="Center"/>
            <view:TaskChatControl 
                Grid.Column="3" 
                TaskViewModel="{Binding}"/>

        </Grid>


    </Border>

</UserControl>
