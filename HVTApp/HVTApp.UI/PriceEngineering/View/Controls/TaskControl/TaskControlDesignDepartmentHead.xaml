<UserControl x:Class="HVTApp.UI.PriceEngineering.View.TaskControlDesignDepartmentHead"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:HVTApp.UI.PriceEngineering.View"
             xmlns:converters="clr-namespace:HVTApp.UI.PriceEngineering.Converters"
             x:Name="Root">

    <UserControl.Resources>
        <converters:PriceEngineeringTaskViewModelDesignDepartmentHeadVisibilityConverter x:Key="DesignDepartmentHeadVisibilityConverter" />
    </UserControl.Resources>

    <view:TaskControl TaskViewModel="{Binding}">

        <view:TaskControl.AreaFiles>
            <view:FilesControl TaskViewModel="{Binding}"/>
        </view:TaskControl.AreaFiles>

        <view:TaskControl.AreaInstruct>
            <Button Grid.Column="0" 
                    Visibility="{Binding Converter={StaticResource DesignDepartmentHeadVisibilityConverter}}"
                    Content="..." 
                    Command="{Binding TaskViewModel.InstructPriceEngineeringTaskCommand, ElementName=Root}" 
                    Padding="5 0"/>
        </view:TaskControl.AreaInstruct>

        <view:TaskControl.AreaActionButtons>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Принять проработку" Command="{Binding TaskViewModel.AcceptPriceEngineeringTaskCommand, ElementName=Root}"/>
                <Button Grid.Column="1" Content="Отправить на доработку" Command="{Binding TaskViewModel.RejectPriceEngineeringTaskCommand, ElementName=Root}"/>
            </Grid>
        </view:TaskControl.AreaActionButtons>

    </view:TaskControl>

</UserControl>
