<UserControl x:Class="HVTApp.UI.PriceEngineering.View.TasksControlManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:HVTApp.UI.PriceEngineering.View"
             x:Name="Root">

    <Border DataContext="{Binding TasksViewModel, ElementName=Root}" Background="White" Padding="5">

        <view:TasksControl>

            <view:TasksControl.CommonInformation>
                <view:CommonInformationControl DataContext="{Binding}"/>
            </view:TasksControl.CommonInformation>

            <view:TasksControl.Products>
                <ItemsControl
                    ItemsSource="{Binding TasksWrapper.ChildTasks}" 
                    HorizontalAlignment="Stretch"
                    BorderThickness="0">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <view:ProductTaskControlManager 
                                TaskViewModel="{Binding}"
                                Margin="2 5 2 0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </view:TasksControl.Products>
        </view:TasksControl>

    </Border>

</UserControl>
