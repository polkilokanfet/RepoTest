<UserControl x:Class="HVTApp.UI.PriceEngineering.View.TasksControlBackManagerBoss"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view1="clr-namespace:HVTApp.UI.PriceEngineering.Tce.Second.View"
             xmlns:view="clr-namespace:HVTApp.UI.PriceEngineering.View"
             x:Name="Root">

    <view:TasksControl DataContext="{Binding TasksViewModel, ElementName=Root}">

        <!--Общая информация для всего оборудования в заданиях-->
        <view:TasksControl.CommonInformation>
            <view:CommonInformationControlConstructor DataContext="{Binding}"/>
        </view:TasksControl.CommonInformation>

        <!--Оборудование-->
        <view:TasksControl.Products>
            <ItemsControl ItemsSource="{Binding TasksWrapper.Items, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <view1:TasksTceItemControl TasksTceItem="{Binding }"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </view:TasksControl.Products>

    </view:TasksControl>

</UserControl>
