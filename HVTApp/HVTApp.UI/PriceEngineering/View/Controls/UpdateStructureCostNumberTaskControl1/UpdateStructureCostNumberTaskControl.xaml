<UserControl x:Class="HVTApp.UI.PriceEngineering.View.UpdateStructureCostNumberTaskControl1.UpdateStructureCostNumberTaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:HVTApp.UI.PriceEngineering.View"
             xmlns:ribbon="http://schemas.infragistics.com/xaml/wpf"
             x:Name="Root"
             MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonWindowContentHost}}, Path=ActualWidth, Converter={StaticResource BlockAddedWidthConverter}}">

    <Border 
        DataContext="{Binding ElementName=Root, Path=UpdateTask}"
        Background="AliceBlue"  
        BorderBrush="Black" BorderThickness="1" 
        CornerRadius="5">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <view:ProductBlockControl Grid.Column="0" ProductBlock="{Binding Model.ProductBlock, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 0 0"/>

            <Label Grid.Column="1" Content="Было: " Margin="5 0 0 0"/>
            <TextBox Grid.Column="2" 
                     Width="120" 
                     Text="{Binding Model.StructureCostNumberOriginal, Mode=OneTime, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="True"/>

            <Label Grid.Column="3" Content="Стало: " Margin="5 0 0 0"/>
            <TextBox Grid.Column="4" 
                     Width="120" 
                     Text="{Binding Model.StructureCostNumber, Mode=OneTime}"
                     IsReadOnly="True"/>

            <!--<Label Grid.Column="5" Content="Согласовано" DataContext="{}">
                <Label.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding}" Value="Visible">
                                <Setter Property="Label.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>-->

            <!--<Label Grid.Column="5" Content="Согласовано: " Margin="5 0 0 0"/>
            <CheckBox Grid.Column="6" 
                      IsChecked="{Binding Model.IsAccepted, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="True"/>-->

            <Button Grid.Column="7" Width="100" Content="Согласовать" Command="{Binding AcceptNumberCommand}"/>
            <Button Grid.Column="8" Width="100" Content="Отклонить" Command="{Binding RejectNumberCommand}"/>

        </Grid>
    </Border>

</UserControl>
