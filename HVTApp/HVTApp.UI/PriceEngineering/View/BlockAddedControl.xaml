<UserControl x:Class="HVTApp.UI.PriceEngineering.View.BlockAddedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:HVTApp.UI.PriceEngineering.Converters"
             xmlns:editors="http://infragistics.com/Editors"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:view="clr-namespace:HVTApp.UI.PriceEngineering.View"
             xmlns:ribbon="http://schemas.infragistics.com/xaml/wpf"
             MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonWindowContentHost}}, Path=ActualWidth, Converter={StaticResource BlockAddedWidthConverter}}">

    <!--<UserControl.Resources>
        <converters:BlockAddedWidthConverter x:Key="BlockAddedWidthConverter" />
    </UserControl.Resources>-->

    <Border Background="AliceBlue"  BorderBrush="Black" BorderThickness="1" CornerRadius="5">
        <Grid IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type view:PriceEngineeringTaskControl}}, Path=DataContext.IsEditMode, UpdateSourceTrigger=PropertyChanged}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding ProductBlock, Mode=OneWay, Converter={StaticResource WrapperToStringConverter}}" VerticalAlignment="Center" Margin="5 0 0 0" FontWeight="DemiBold"/>
            
            <Label Grid.Column="1" Content="SCC: " Margin="10 0 0 0"/>
            <TextBox Grid.Column="2" Width="150" Text="{Binding ProductBlock.StructureCostNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <editors:XamNumericEditor Grid.Column="3" Width="37" Margin="10 0 0 0" Value="{Binding Amount}" ValueType="system:Int32"/>
            <Label Grid.Column="4" Content=" шт.: "/>

            <CheckBox Grid.Column="5" IsChecked="{Binding IsOnBlock, Mode=TwoWay}" Margin="5 0 0 0"/>
            <Label Grid.Column="6" Content=" - на блок"/>
        </Grid>
    </Border>

</UserControl>
