<inf:ViewBaseConfirmNavigationRequest 
    x:Class="HVTApp.UI.PriceEngineering.View.PriceEngineeringTasksViewObserver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
    xmlns:view="clr-namespace:HVTApp.UI.PriceEngineering.View">

    <Border Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Режим просмотра с доступом к работе в чате" Foreground="YellowGreen" HorizontalAlignment="Left" Margin="0 0 0 -6"/>
            <view:TasksControlObserver Grid.Row="1" TasksViewModel="{Binding}"/>
        </Grid>

    </Border>

</inf:ViewBaseConfirmNavigationRequest>
