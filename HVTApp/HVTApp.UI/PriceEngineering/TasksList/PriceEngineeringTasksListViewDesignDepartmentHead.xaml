<inf:ViewBase x:Class="HVTApp.UI.PriceEngineering.PriceEngineeringTasksListViewDesignDepartmentHead"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:dp="http://infragistics.com/DataPresenter"
              xmlns:controls="http://infragistics.com/Windows">

    <dp:XamDataGrid x:Name="PriceEngineeringTasksLookupListGrid" Style="{StaticResource ListViewGrid}" DataItems="{Binding PriceEngineeringTasks}">

        <dp:XamDataGrid.InputBindings>
            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding Path=OpenTaskCommand, Mode=OneWay}"/>
        </dp:XamDataGrid.InputBindings>

        <dp:XamDataGrid.FieldLayouts>
            <dp:FieldLayout>
                <dp:FieldLayout.RecordFilters>
                    <dp:RecordFilter FieldName="ToShow">
                        <dp:RecordFilter.Conditions>
                            <controls:ComparisonCondition Operator="Equals" Value="True" />
                        </dp:RecordFilter.Conditions>
                    </dp:RecordFilter>
                </dp:FieldLayout.RecordFilters>

                <dp:FieldLayout.Fields>
                    <dp:TextField Name="DesignDepartment" Label="Бюро конструкторов" Width="Auto" AllowResize="True" Converter="{StaticResource LookupToStringConverter}"/>
                    <dp:TextField Name="UserConstructor" Label="Конструктор" Width="Auto" AllowResize="True" Converter="{StaticResource LookupToStringConverter}"/>
                    <dp:NumericField Name="Amount" Label="Количество блоков продукта" Width="Auto" AllowResize="True" />
                    <dp:TextField Name="ProductBlockManager" Label="Блок продукта от менеджера" Width="Auto" AllowResize="True" Converter="{StaticResource LookupToStringConverter}"/>
                    <dp:TextField Name="ProductBlockEngineer" Label="Блок продукта от инженера-конструктора" Width="Auto" AllowResize="True" Converter="{StaticResource LookupToStringConverter}"/>
                    <dp:TextField Name="ProductBlocksAdded" Label="Добавленные блоки продукта от инженера-конструктора" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="FilesTechnicalRequirements" Label="Файлы технических требований" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="FilesAnswers" Label="Файлы ответов ОГК" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="Messages" Label="Переписка" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="ChildPriceEngineeringTasks" Label="Дочерние задачи" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="StructureCostVersions" Label="Версии SCC" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="PriceCalculationItems" Label="Строки расчётов ПЗ" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="Statuses" Label="Статусы проработки" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:CheckBoxField Name="RequestForVerificationFromHead" Label="Запрос на проверку от руководителя" Width="Auto" AllowResize="True" />
                    <dp:CheckBoxField Name="RequestForVerificationFromConstructor" Label="Запрос на проверку от исполнителя" Width="Auto" AllowResize="True" />
                    <dp:TextField Name="SalesUnits" Label="SalesUnits" Width="Auto" AllowResize="True" Converter="{StaticResource LookupsToStringConverter}"/>
                    <dp:TextField Name="UserConstructorInitiator" Label="Инициатор подзадачи" Width="Auto" AllowResize="True" Converter="{StaticResource LookupToStringConverter}"/>
                    <dp:DateTimeField Name="StartMoment" Label="Старт" Width="Auto" AllowResize="True" />
                    <dp:CheckBoxField Name="IsTotalStopped" Label="IsTotalStopped" Width="Auto" AllowResize="True" />
                    <dp:CheckBoxField Name="IsTotalAccepted" Label="IsTotalAccepted" Width="Auto" AllowResize="True" />
                    <dp:CheckBoxField Name="IsFinishedByConstructor" Label="IsFinishedByConstructor" Width="Auto" AllowResize="True" />
                    <dp:CheckBoxField Name="HasSccInTce" Label="HasSccInTce" Width="Auto" AllowResize="True" />
                    <dp:TextField Name="Id" Label="Id" Width="Auto" AllowResize="True" />
                </dp:FieldLayout.Fields>
            </dp:FieldLayout>

            <!--<dp:FieldLayout>

                <dp:FieldLayout.Fields>
