<inf:ViewBase x:Class="HVTApp.UI.PriceEngineering.PriceEngineeringTasksListViewDesignDepartmentHead"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:dp="http://infragistics.com/DataPresenter"
              xmlns:controls="http://infragistics.com/Windows"
              xmlns:priceEngineering="clr-namespace:HVTApp.UI.PriceEngineering"
              x:Name="Root">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Задачи">
            <priceEngineering:PriceEngineeringTasksListControl ViewModel="{Binding}"/>
        </GroupBox>

        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="2"/>

        <GroupBox Grid.Row="2" Header="Нагрузка на сотрудников">
            <priceEngineering:WorkloadOnEmployeesControl ViewModel="{Binding WorkloadOnEmployeesViewModel, ElementName=Root}"/>
        </GroupBox>
    </Grid>

</inf:ViewBase>