<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.UI.Modules.PriceMaking.Tabs.TabPriceTasks"
                                 Header="Себестоимость">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Обновить" Command="{Binding ReloadCommand}" SmallImage="/HVTApp.UI;component/Images/Refresh_16x16.png"/>
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveCommand}" SmallImage="/HVTApp.UI;component/Images/Save_16x16.png"/>
    </infRib:RibbonGroup>
    
    <infRib:RibbonGroup Caption="Прайс">
        <infRib:ButtonTool Caption="Добавить" Command="{Binding AddPriceCommand}" SmallImage="/HVTApp.UI;component/Images/Add_16x16.png"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemovePriceCommand}" SmallImage="/HVTApp.UI;component/Images/Delete_16x16.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Продукт">
        <infRib:ButtonTool Caption="Блок в контексте" Command="{Binding PrintBlockInContext}" SmallImage="/HVTApp.UI;component/Images/Print_16x16.png"/>
    </infRib:RibbonGroup>
        
</inf:RibbonTabItemWithViewModel>