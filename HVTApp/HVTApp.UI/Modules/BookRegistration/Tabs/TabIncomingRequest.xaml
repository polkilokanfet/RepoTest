<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.UI.Modules.BookRegistration.Tabs.TabIncomingRequest"
                                 Header="Входящий запрос">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Назад" Command="{Binding GoBackCommand}" SmallImage="/HVTApp.UI;component/Images/ar_back.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Запрос">
        <infRib:ButtonTool Caption="Не актуален" Command="{Binding RequestIsNotActualCommand}" SmallImage="/HVTApp.UI;component/Images/cancel.png"/>
        <infRib:ButtonTool Caption="Поручить" Command="{Binding InstructRequestCommand}" SmallImage="/HVTApp.UI;component/Images/arrow_forward.png"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>