<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.UI.Modules.BookRegistration.Tabs.TabIncomingRequest"
                                 Header="Входящий запрос">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Приложения" Command="{Binding OpenFolderCommand}" SmallImage="/HVTApp.UI;component/Images/folder.png"/>
        <infRib:ButtonTool Caption="Закрыть" Command="{Binding GoBackCommand}" SmallImage="/HVTApp.UI;component/Images/close.png"/>
    </infRib:RibbonGroup>
               
</inf:RibbonTabItemWithViewModel>