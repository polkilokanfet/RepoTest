<inf:ViewBase x:Class="HVTApp.UI.Modules.PlanAndEconomy.Views.PaymentDocumentView"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:igWpf="http://schemas.infragistics.com/xaml/wpf"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:views="clr-namespace:HVTApp.UI.Views">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Детали платежного документа -->
        <views:PaymentDocumentDetailsView DataContext="{Binding}" 
                                          VisibilityPaymentsPaymentDocument="Collapsed"
                                          VisibilityVatPaymentDocument="Collapsed"
                                          Grid.Row="0"/>

        <!-- Внесенные платежи -->
        <GroupBox Grid.Row="1" Header="Внесенные платежи">
            <DockPanel LastChildFill="True">
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Дата: "/>
                    <igWpf:XamDateTimeEditor Grid.Column="1" Value="{Binding DockDate}"/>

                    <Label Grid.Column="2" Content=" Сумма с НДС, руб: "/>
                    <igWpf:XamNumericEditor Grid.Column="3" Value="{Binding DockSumWithVat}"/>

                </Grid>

                <!-- Части платежа -->
                <igWpf:XamDataGrid DataSource="{Binding Payments}"
                                   SelectedDataItem="{Binding SelectedPayment, Mode=TwoWay}">

                    <igWpf:XamDataGrid.FieldLayouts>
                        <igWpf:FieldLayout>
                            <igWpf:FieldLayout.Fields>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Facility}" Converter="{StaticResource ObjectToStringConverter}" BindingType="UseAlternateBinding" Label="Объект" Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Product.ProductType}" Converter="{StaticResource ObjectToStringConverter}" BindingType="UseAlternateBinding" Label="Тип" Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Product.Designation}" BindingType="UseAlternateBinding" Label="Обозначение" Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Order}" Converter="{StaticResource ObjectToStringConverter}" BindingType="UseAlternateBinding" Label="З/з" Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.OrderPosition}" BindingType="UseAlternateBinding" Label="Поз." Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Specification.Contract.Contragent}" BindingType="UseAlternateBinding" Label="Контрагент" Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Specification.Number}" BindingType="UseAlternateBinding" Label="Сп.№" Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Specification.Contract.Number}" BindingType="UseAlternateBinding" Label="Договор" Width="Auto"/>
                                <igWpf:NumericField AlternateBinding="{Binding SumWithVat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BindingType="UseAlternateBinding" Label="Сумма" Width="Auto" AllowEdit="True"/>
                                <igWpf:NumericField AlternateBinding="{Binding SumNotPaidWithVat}" BindingType="UseAlternateBinding" Label="Остаток" Width="Auto"/>
                                <igWpf:NumericField AlternateBinding="{Binding SalesUnit.Model.Vat}" BindingType="UseAlternateBinding" Label="НДС" Width="Auto"/>
                                <igWpf:TextField AlternateBinding="{Binding SalesUnit.Model.Project.Manager}" Converter="{StaticResource ObjectToStringConverter}" BindingType="UseAlternateBinding" Label="Менеджер" Width="Auto"/>
                            </igWpf:FieldLayout.Fields>
                        </igWpf:FieldLayout>

                    </igWpf:XamDataGrid.FieldLayouts>
                </igWpf:XamDataGrid>
            </DockPanel>
        </GroupBox>

        <!-- Разделитель -->
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="3"/>

        <!-- Неоплаченное оборудование -->
        <GroupBox Grid.Row="3" Header="Неоплаченное оборудование">
            <igWpf:XamDataGrid DataSource="{Binding Potential}"
                               SelectedDataItemsScope="RecordsOrCells"
                               SelectedDataItems="{Binding Path=SelectedPotentialUnits, Mode=TwoWay}">

                <igWpf:XamDataGrid.FieldLayouts>
                    <igWpf:FieldLayout>
                        <igWpf:FieldLayout.Fields>
                            <igWpf:TextField AlternateBinding="{Binding Model.Facility}" BindingType="UseAlternateBinding" Label="Объект" Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.Product.ProductType}" BindingType="UseAlternateBinding" Label="Тип" Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.Product.Designation}" BindingType="UseAlternateBinding" Label="Обозначение" Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.Order}" Converter="{StaticResource ObjectToStringConverter}" BindingType="UseAlternateBinding" Label="З/з" Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.OrderPosition}" BindingType="UseAlternateBinding" Label="Поз." Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.Specification.Contract.Contragent}" BindingType="UseAlternateBinding" Label="Контрагент" Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.Specification.Number}" BindingType="UseAlternateBinding" Label="Сп.№" Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.Specification.Contract.Number}" BindingType="UseAlternateBinding" Label="Договор" Width="Auto"/>
                            <igWpf:NumericField AlternateBinding="{Binding Model.SumNotPaidWithVat}" BindingType="UseAlternateBinding" Label="Остаток" Width="Auto"/>
                            <igWpf:NumericField AlternateBinding="{Binding Model.Vat}" BindingType="UseAlternateBinding" Label="НДС" Width="Auto"/>
                            <igWpf:TextField AlternateBinding="{Binding Model.Project.Manager}" Converter="{StaticResource ObjectToStringConverter}" BindingType="UseAlternateBinding" Label="Менеджер" Width="Auto"/>
                        </igWpf:FieldLayout.Fields>
                    </igWpf:FieldLayout>

                </igWpf:XamDataGrid.FieldLayouts>
            </igWpf:XamDataGrid>
        </GroupBox>

    </Grid>
</inf:ViewBase>