<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.UI.Modules.PlanAndEconomy.Tabs.TabOrder"
                                 Header="Заказ">
    
    <infRib:RibbonGroup Caption="Оборудование">
        <infRib:ButtonTool Caption="Разместить" Command="{Binding AddGroupCommand}" SmallImage="/HVTApp.UI;component/Images/add.png"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveGroupCommand}" SmallImage="/HVTApp.UI;component/Images/remove.png"/>
        <infRib:ButtonTool Caption="Структура" Command="{Binding ShowProductStructureCommand}" SmallImage="/HVTApp.UI;component/Images/structure.png"/>
    </infRib:RibbonGroup>
    
    <infRib:RibbonGroup Caption="Заказ">
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveOrderCommand}" SmallImage="/HVTApp.UI;component/Images/save.png"/>
        <infRib:ButtonTool Caption="Закрыть" Command="{Binding GoBackCommand}" SmallImage="/HVTApp.UI;component/Images/close.png"/>
    </infRib:RibbonGroup>
               
</inf:RibbonTabItemWithViewModel>