<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.UI.Modules.Products.Tabs.TabStructureCosts"
                                 Header="Стракчакосты">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveCommand}" SmallImage="/HVTApp.UI;component/Images/save.png"/>
        <infRib:ButtonTool Caption="Отменить" Command="{Binding CancelCommand}" SmallImage="/HVTApp.UI;component/Images/cancel.png"/>
        <infRib:ButtonTool Caption="Блок в контексте" Command="{Binding PrintProductBlockCommand}" SmallImage="/HVTApp.UI;component/Images/structure.png"/>
    </infRib:RibbonGroup>
        
</inf:RibbonTabItemWithViewModel>