                                        <infg:CheckBoxField BindingType="UseAlternateBinding" AlternateBinding="{Binding InReport}" Label="Отч." Width="Auto" Name="InReport"/>
                                        <infg:Field Name="MonthContainers" IsExpandable="True"/>
