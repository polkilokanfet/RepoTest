                                    <infg:FieldLayout.Fields>
                                        <infg:NumericField Name="Year" Label="Год" Width="Auto"/>
                                        <infg:NumericField BindingType="UseAlternateBinding" AlternateBinding="{Binding Sum}" Label="Набрано" Width="Auto"/>
