<UserControl x:Class="HVTApp.UI.Modules.Directum.DirectumTask.ContentTaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:directumTask="clr-namespace:HVTApp.UI.Modules.Directum.DirectumTask"
             xmlns:editors="http://infragistics.com/Editors">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Предыдущие задачи-->
        <ItemsControl Grid.Row="0" ItemsSource="{Binding PreviousTasks}" Visibility="{Binding ShowPreviousTask, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <directumTask:ContentTaskControl DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


        <GroupBox Grid.Row="1" Header="Задача" Margin="5" BorderBrush="Black">
        
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
        
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Border Background="AliceBlue"  BorderThickness="1" BorderBrush="Black">
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Инициатор: "/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Group.Author, Mode=OneWay}" IsReadOnly="True" Background="AliceBlue" BorderThickness="0"/>

                            <Label Grid.Row="0" Grid.Column="2" Content="Старт: "/>
                            <editors:XamDateTimeEditor Grid.Row="0" Grid.Column="3" Value="{Binding Model.StartResult, Mode=OneWay}" Background="AliceBlue" Format="dd/MM/yy HH:mm" IsReadOnly="True"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Исполнитель: "/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Performer, Mode=OneWay}" IsReadOnly="True" Background="AliceBlue" BorderThickness="0"/>

                            <Label Grid.Row="1" Grid.Column="2" Content="Финиш: "/>
                            <editors:XamDateTimeEditor Grid.Row="1" Grid.Column="3" Value="{Binding FinishAuthor, Mode=OneWay}" Format="dd/MM/yy HH:mm" IsReadOnly="True" Background="AliceBlue"/>
                        
                        </Grid>
                    </Border>
                    
                    <Border Grid.Row="1" Background="White"  BorderThickness="1" BorderBrush="Black">
                        <TextBox Margin="2" Text="{Binding Group.Message, Mode=OneWay}" IsReadOnly="True" BorderThickness="0"/>
                    </Border>
                </Grid>

                <!--Переписка-->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding MessagesByMoment}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Content=" - "/>
                                    
                                <Border Grid.Row="0" Grid.Column="1" Background="LightGray" BorderBrush="Black" BorderThickness="1">
                                    <Grid Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                    
                                        <Label Grid.Row="0" Grid.Column="0" Content="Автор: "/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Author, Mode=OneWay}" IsReadOnly="True" Background="LightGray" BorderThickness="0"/>

                                        <Label Grid.Row="0" Grid.Column="2" Content="Момент: "/>
                                        <editors:XamDateTimeEditor Grid.Row="0" Grid.Column="3" Value="{Binding Moment, Mode=OneWay}" Format="dd/MM/yy HH:mm" IsReadOnly="True" Background="LightGray"/>
                                    </Grid>
                                </Border>
                                    
                                <Border Grid.Row="1" Grid.Column="1" BorderThickness="1" BorderBrush="Black">
                                    <TextBox Text="{Binding Message, Mode=OneWay}" IsReadOnly="True" Margin="5" BorderThickness="0"/>
                                </Border>
                            
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--Дочерние задачи-->
                <ItemsControl Grid.Row="2" ItemsSource="{Binding ChildTasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightGray" Margin="20 0 10 0" Padding="5 2">
                                <directumTask:ContentTaskControl DataContext="{Binding}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>

        </GroupBox>
        
        <!--Параллельные задачи-->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding ParallelTasks}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <directumTask:ContentTaskControl DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
    
</UserControl>
