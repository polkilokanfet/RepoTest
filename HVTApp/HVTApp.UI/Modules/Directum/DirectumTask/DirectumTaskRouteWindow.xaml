<Window x:Class="HVTApp.UI.Modules.Directum.DirectumTaskRouteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dataPresenter="http://infragistics.com/DataPresenter" 
        xmlns:editors="http://infragistics.com/Editors"
        Title="Маршрут задачи"
        MinWidth="640" Width="700" MinHeight="400" Height="500"
        WindowStartupLocation="CenterScreen">
      
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
            
        <StackPanel Orientation="Horizontal" Margin="10 0">
            <Button Content="Добавить исполнителя" Command="{Binding AddPerformerCommand}" Padding="5"/>
            <Button Content="Удалить исполнителя" Command="{Binding RemovePerformerCommand}" Padding="5" Margin="5 0"/>
            <Label Content=" Срок исполнения: "/>
            <editors:XamDateTimeEditor Value="{Binding FinishPlan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Format="dd/MM/yy HH:mm"
                                        Width="150"
                                        Height="25"
                                        Mask="dd/mm/yy hh:mm"/>
        </StackPanel>
            
        <dataPresenter:XamDataGrid Grid.Row="1" Margin="10" 
                            DataSource="{Binding DirectumTaskRoute.Items}"
                            SelectedDataItem="{Binding SelectedDirectumTaskRouteItem}">
            <dataPresenter:XamDataGrid.FieldLayouts>
                <dataPresenter:FieldLayout>
                    <dataPresenter:NumericField AlternateBinding="{Binding Index}" BindingType="UseAlternateBinding" Label="№" Width="Auto" AllowResize="False"/>
                    <dataPresenter:TextField AlternateBinding="{Binding Performer}" BindingType="UseAlternateBinding" Label="Исполнитель" Width="Auto" AllowResize ="True"/>
                    <dataPresenter:DateTimeField AlternateBinding="{Binding FinishPlan}" BindingType="UseAlternateBinding" Label="Срок" Width="Auto" AllowResize="False"/>
                </dataPresenter:FieldLayout>
            </dataPresenter:XamDataGrid.FieldLayouts>
        </dataPresenter:XamDataGrid>
                
        <Button Grid.Row="2" Content="Ok" Command="{Binding OkCommand}" Margin="10 0 10 10"/>
        
    </Grid>
            
</Window>
 

 

 

 

 

 

 

 
