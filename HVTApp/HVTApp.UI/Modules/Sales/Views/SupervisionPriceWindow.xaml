<Window x:Class="HVTApp.UI.Modules.Sales.Views.SupervisionPriceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:HVTApp.UI.Views"
        Title="Оборудование основное"
        Width="500"
        MinWidth="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        
        <views:ProductIncludedDetailsView DataContext="{Binding}"
                                          VisibilityAmountProductIncluded="Collapsed"
                                          VisibilityParentsCountProductIncluded="Collapsed"
                                          VisibilityAmountOnUnitProductIncluded="Collapsed"
                                          VisibilityProductProductIncluded="Collapsed"/>
        
        <Button Content="Ok" Command="{Binding OkCommand}"/>
        
    </StackPanel>
    
</Window>
 
