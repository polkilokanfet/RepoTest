<inf:ViewBase xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:infg="http://infragistics.com/DataPresenter"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:controls="http://infragistics.com/Windows"
              x:Class="HVTApp.UI.Modules.Sales.Views.ProductionView">

    <Grid>
        <Grid Name="ContentGrid">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <GroupBox Grid.Row="0" Header="Размещенное в производстве оборудование">
                <infg:XamDataGrid x:Name="ProductionListGrid"
                                  DataSource="{Binding GroupsInProduction}"
                                  SelectedDataItem="{Binding SelectedInProduction, Mode=TwoWay}">
                    
                    <infg:XamDataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Export to Excel" Command="{Binding ExportToExcel}" CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ContextMenu}}}"/>
                        </ContextMenu>
                    </infg:XamDataGrid.ContextMenu>

                    <infg:XamDataGrid.FieldLayouts>
				        <infg:FieldLayout>

                            <infg:FieldLayout.RecordFilters>
                                <infg:RecordFilter FieldName="IsProduced">
                                    <infg:RecordFilter.Conditions>
                                        <controls:ComparisonCondition Operator="Equals" Value="False" />
                                    </infg:RecordFilter.Conditions>
                                </infg:RecordFilter>
                            </infg:FieldLayout.RecordFilters>

                            <infg:FieldLayout.Fields>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Facility}" BindingType="UseAlternateBinding" Label="Объект" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Product.ProductType}" BindingType="UseAlternateBinding" Label="Тип оборудования" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Product.Designation}" BindingType="UseAlternateBinding" Label="Обозначение" Width="400"/>
                                <infg:NumericField AlternateBinding="{Binding Amount}" BindingType="UseAlternateBinding" Label="Кол." Width="Auto" AllowResize="False"/>
                                <infg:TextField AlternateBinding="{Binding Order}" BindingType="UseAlternateBinding" Label="З/з" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Specification.Contract.Contragent}" BindingType="UseAlternateBinding" Label="Контрагент" Width="200"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Specification}" BindingType="UseAlternateBinding" Label="Сп.№" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Specification.Contract}" BindingType="UseAlternateBinding" Label="Договор" Width="Auto"/>
                                <infg:DateTimeField AlternateBinding="{Binding SalesUnit.EndProductionDateCalculated}" BindingType="UseAlternateBinding" Label="Фактическая" Width="Auto" AllowResize="False"/>
                                <infg:DateTimeField AlternateBinding="{Binding EndProductionDateExpected}" BindingType="UseAlternateBinding" Label="Требуемая" Width="Auto" AllowResize="False"/>
                                <infg:DateTimeField AlternateBinding="{Binding SalesUnit.EndProductionDateByContractCalculated}" BindingType="UseAlternateBinding" Label="По договору" Width="Auto" AllowResize="False"/>
                                <infg:CheckBoxField Name="IsProduced" AlternateBinding="{Binding IsProduced}" BindingType="UseAlternateBinding" Label="Произведено" Width="Auto" AllowResize="False"/>
                            </infg:FieldLayout.Fields>
				        </infg:FieldLayout>

			        </infg:XamDataGrid.FieldLayouts>
                    
		        </infg:XamDataGrid>
            </GroupBox>
            
            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="5"/>

            <GroupBox Grid.Row="2" Header="Потенциальное">
                <infg:XamDataGrid x:Name="PotentialListGrid"
                                  DataSource="{Binding GroupsToProduction}"
                                  SelectedDataItem="{Binding SelectedToProduction, Mode=TwoWay}">

			        <infg:XamDataGrid.FieldLayouts>
                        
				        <infg:FieldLayout>
                            <infg:FieldLayout.Fields>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Facility}" BindingType="UseAlternateBinding" Label="Объект" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Product.ProductType}" BindingType="UseAlternateBinding" Label="Тип оборудования" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Product.Designation}" BindingType="UseAlternateBinding" Label="Обозначение" Width="400"/>
                                <infg:NumericField AlternateBinding="{Binding Amount}" BindingType="UseAlternateBinding" Label="Кол." Width="Auto" />
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Specification.Contract.Contragent}" BindingType="UseAlternateBinding" Label="Контрагент" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Specification}" BindingType="UseAlternateBinding" Label="Сп.№" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding SalesUnit.Specification.Contract}" BindingType="UseAlternateBinding" Label="Договор" Width="Auto"/>
                                <infg:DateTimeField Name="EndProductionDateExpected" Label="Требуемая" AllowEdit="True" Width="Auto" AllowResize="False"/>
                                <infg:Field Name="ProductionItems" IsExpandable="True"/>
                            </infg:FieldLayout.Fields>
				        </infg:FieldLayout>

                        <infg:FieldLayout ParentFieldName="ProductionItems">
                            <infg:FieldLayout.Fields>
                                <infg:TextField AlternateBinding="{Binding Model.Facility}" BindingType="UseAlternateBinding" Label="Объект" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding Model.Product.ProductType}" BindingType="UseAlternateBinding" Label="Тип оборудования" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding Model.Product.Designation}" BindingType="UseAlternateBinding" Label="Обозначение" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding Model.Specification.Contract.Contragent}" BindingType="UseAlternateBinding" Label="Контрагент" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding Model.Specification}" BindingType="UseAlternateBinding" Label="Сп.№" Width="Auto"/>
                                <infg:TextField AlternateBinding="{Binding Model.Specification.Contract}" BindingType="UseAlternateBinding" Label="Договор" Width="Auto"/>
                                <infg:DateTimeField Name="EndProductionDateExpected" Label="Требуемая" AllowEdit="True" Width="Auto" AllowResize="False"/>
                                <infg:DateTimeField AlternateBinding="{Binding TceInfo}" BindingType="UseAlternateBinding" Label="TCE" Width="Auto"/>
                            </infg:FieldLayout.Fields>
				        </infg:FieldLayout>

			        </infg:XamDataGrid.FieldLayouts>
                </infg:XamDataGrid>
            </GroupBox>

        </Grid>

    </Grid>
</inf:ViewBase>

	

	

	

	

	

	

	

	