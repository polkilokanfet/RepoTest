<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure" 
             x:Class="HVTApp.UI.Modules.Sales.Tabs.MarketSettingsTab"
             Header="Настройки">

    <infRib:RibbonGroup Caption="Папка проекта">
        <infRib:ButtonTool Caption="Выбрать главную папку" Command="{Binding SelectProjectsFolderCommand}" SmallImage="/HVTApp.UI;component/Images/done.png"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
