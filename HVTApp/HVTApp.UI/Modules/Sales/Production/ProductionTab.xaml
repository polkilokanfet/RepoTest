<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.UI.Modules.Sales.Production.ProductionTab"
             Header="Производство">

    <infRib:RibbonGroup Caption="Вид">
        <infRib:ButtonTool Caption="Перезагрузить" Command="{Binding ReloadCommand}" SmallImage="/HVTApp.UI;component/Images/refresh.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Редактирование">
        <infRib:ButtonTool Caption="Открыть задачу" Command="{Binding OpenOrderTaskCommand}" SmallImage="/HVTApp.UI;component/Images/edit.png"/>
        <!--<infRib:ButtonTool Caption="Разместить" Command="{Binding ProductUnitCommand}" SmallImage="/HVTApp.UI;component/Images/add.png"/>
        <infRib:ButtonTool Caption="Отозвать" Command="{Binding RemoveFromProductionCommand}" SmallImage="/HVTApp.UI;component/Images/remove.png"/>-->
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
