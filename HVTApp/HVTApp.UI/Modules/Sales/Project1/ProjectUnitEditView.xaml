<inf:ViewBase x:Class="HVTApp.UI.Modules.Sales.Project1.ProjectUnitEditView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:infDP="http://infragistics.com/DataPresenter"
              xmlns:infE="http://infragistics.com/Editors"
              xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:wrappers="clr-namespace:HVTApp.UI.Modules.Sales.Project1.Wrappers"
              mc:Ignorable="d"
              d:DataContext="{d:DesignInstance wrappers:ProjectUnitEditViewModel, IsDesignTimeCreatable=True}"
              Height="Auto"
              Width="Auto"
              x:Name="Root">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="MinWidth" Value="200"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row ="0" Content="Объект"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="0" 
                                    Item="{Binding ProjectUnit.Facility}" 
                                    AddItemCommand="{Binding ChangeFacilityCommand}"/>

        <Label Grid.Column="0" Grid.Row ="1" Content="Продукт"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="1" 
                                    Item="{Binding ProjectUnit.Product}" 
                                    AddItemCommand="{Binding ChangeProductCommand}"/>

        <Label Grid.Column="0" Grid.Row ="2" Content="Стоимость" />
        <infE:XamNumericEditor Grid.Column="1" Grid.Row="2" 
                               Value="{Binding ProjectUnit.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row ="5" Content="Стоимость доставки" />
        <infE:XamNumericEditor Grid.Column="1" Grid.Row="5" 
                               Value="{Binding ProjectUnit.CostDelivery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row ="8" Content="Условия оплаты" />
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="8" 
                                    Item="{Binding ProjectUnit.PaymentConditionSet}" 
                                    AddItemCommand="{Binding ChangePaymentConditionsSetCommand}"/>

        <Label Grid.Column="0" Grid.Row ="10" Content="Требуемая дата поставки" />
        <DatePicker Grid.Column="1" Grid.Row="10" 
                    SelectedDate="{Binding ProjectUnit.DeliveryDateExpected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row ="13" Content="Срок производства" />
        <infE:XamNumericEditor Grid.Column="1" Grid.Row="13"
							   ValueType="core:Int32"
                               Value="{Binding ProjectUnit.ProductionTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row ="18" Content="Производитель" />
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="18" 
                                    Item="{Binding ProjectUnit.Producer}" 
                                    AddItemCommand="{Binding ChangeProducerCommand}" 
                                    RemoveItemCommand="{Binding RemoveProducerCommand}"/>

        <Label Grid.Column="0" Grid.Row ="24" Content="Комментарий" />
        <TextBox Grid.Column="1" Grid.Row="24"
                 Text="{Binding ProjectUnit.Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


        <!--<Label Grid.Column="0" Grid.Row ="34" Content="Включенные продукты" Visibility="{Binding VisibilityProductsIncludedSalesUnit, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="34"
										 Items="{Binding Path=ProjectUnit.ProductsIncluded}"
										 SelectedItem="{Binding SelectedProductsIncludedItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInProductsIncludedCommand}"
										 RemoveItemCommand="{Binding RemoveFromProductsIncludedCommand}"
										 Visibility="{Binding VisibilityProductsIncludedSalesUnit, ElementName=Root}"/>-->

    </Grid>
</inf:ViewBase>
