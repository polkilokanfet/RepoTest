    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Название проекта">
            <TextBox Text="{Binding ProjectWrapper.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </GroupBox>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Оборудование">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <dp:XamDataGrid x:Name="UnitListGrid"
                                    DataSource="{Binding ProjectWrapper.Units.Groups}"
                                    SelectedDataItemsScope="RecordsOrCells"
                                    ActiveDataItem="{Binding ProjectWrapper.Units.SelectedUnit, Mode=TwoWay}">

                            <dp:XamDataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Export to Excel" Command="{Binding ExportToExcel}" CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ContextMenu}}}"/>
                                </ContextMenu>
                            </dp:XamDataGrid.ContextMenu>

                            <dp:XamDataGrid.FieldLayouts>

                                <dp:FieldLayout Key="GroupsLayout">
                                    <dp:FieldLayout.Fields>
