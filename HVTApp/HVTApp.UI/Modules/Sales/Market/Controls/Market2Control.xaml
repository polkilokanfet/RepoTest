<UserControl x:Class="HVTApp.UI.Modules.Sales.Market.Controls.Market2Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Margin="0 0 0 2">
        <Expander Header="{Binding ElementName=Root, Path=Header}" MaxHeight="300">
            <ContentControl Margin="0 0 0 3" Content="{Binding ElementName=Root, Path=PlaceHolder1}" Name="ContentPresenter"/>
        </Expander>
    </Border>
</UserControl>
