<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure" 
             x:Class="HVTApp.UI.Modules.Sales.Market.Tabs.MarketViewTab"
             Header="Вид">


    <infRib:RibbonGroup Caption="Отображение">
        <infRib:ButtonTool Caption="Развернуть всё" Command="{Binding ExpandCommand}" SmallImage="/HVTApp.UI;component/Images/expand.png"/>
        <infRib:ButtonTool Caption="Свернуть всё" Command="{Binding CollapseCommand}" SmallImage="/HVTApp.UI;component/Images/collapse.png"/>
        <infRib:ButtonTool Caption="Перезагрузить" Command="{Binding ReloadCommand}" SmallImage="/HVTApp.UI;component/Images/refresh.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Вид таблицы">
        <infRib:ButtonTool Caption="Сохранить"
                           Command="{Binding SaveGridCustomisationsCommand}"
                           SmallImage="/HVTApp.UI;component/Images/save.png" />
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
