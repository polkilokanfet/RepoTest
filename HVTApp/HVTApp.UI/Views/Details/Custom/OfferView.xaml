<inf:ViewBase x:Class="HVTApp.UI.Views.OfferView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>



        <ContentControl Grid.Row ="0" Name="DetailsControl"/>

        <controls:UnitListControl Grid.Row="1"
                                  UnitsGroups="{Binding Groups}"
                                  SelectedUnitsGroup="{Binding SelectedGroup, Mode=OneWayToSource}"
                                  AddCommand="{Binding AddCommand}"
                                  RemoveCommand="{Binding RemoveCommand}"
                                  RefreshCommand="{Binding RefreshCommand}"
                                  ChangeFacilityCommand="{Binding ChangeFacilityCommand}"
                                  ChangeProductCommand="{Binding ChangeProductCommand}"
                                  ChangePaymentsCommand = "{Binding ChangePaymentsCommand}"/>



    </Grid>
</inf:ViewBase>
