<inf:ViewBase x:Class="HVTApp.UI.Views.OfferUnitDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row ="0" Content="Срок производства" Visibility="{Binding ProductionTermVisibility, ElementName=Root}"/>
		<infE:XamNumericEditor Grid.Column="1" Grid.Row="0"
							   ValueType="core:Int32"
                               Value="{Binding Item.ProductionTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							   Visibility="{Binding ProductionTermVisibility, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="1" Content="Стоимость" Visibility="{Binding CostVisibility, ElementName=Root}"/>
		<infE:XamNumericEditor Grid.Column="1" Grid.Row="1" 
                               Value="{Binding Item.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							   Visibility="{Binding CostVisibility, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="2" Content="ТКП" Visibility="{Binding OfferVisibility, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="2" 
                                    Item="{Binding Item.Offer}" 
                                    AddItemCommand="{Binding SelectOfferCommand}" 
                                    RemoveItemCommand="{Binding ClearOfferCommand}"
									Visibility="{Binding OfferVisibility, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="3" Content="Продукт" Visibility="{Binding ProductVisibility, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="3" 
                                    Item="{Binding Item.Product}" 
                                    AddItemCommand="{Binding SelectProductCommand}" 
                                    RemoveItemCommand="{Binding ClearProductCommand}"
									Visibility="{Binding ProductVisibility, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="4" Content="Объект" Visibility="{Binding FacilityVisibility, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="4" 
                                    Item="{Binding Item.Facility}" 
                                    AddItemCommand="{Binding SelectFacilityCommand}" 
                                    RemoveItemCommand="{Binding ClearFacilityCommand}"
									Visibility="{Binding FacilityVisibility, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="5" Content="Условия оплаты" Visibility="{Binding PaymentConditionSetVisibility, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="5" 
                                    Item="{Binding Item.PaymentConditionSet}" 
                                    AddItemCommand="{Binding SelectPaymentConditionSetCommand}" 
                                    RemoveItemCommand="{Binding ClearPaymentConditionSetCommand}"
									Visibility="{Binding PaymentConditionSetVisibility, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="6" Content="Включенные продукты" Visibility="{Binding ProductsIncludedVisibility, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="6"
										 Items="{Binding Path=Item.ProductsIncluded}"
										 SelectedItem="{Binding SelectedProductsIncludedItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInProductsIncludedCommand}"
										 RemoveItemCommand="{Binding RemoveFromProductsIncludedCommand}"
										 Visibility="{Binding ProductsIncludedVisibility, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="7" Content="Услуги" Visibility="{Binding ServicesVisibility, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="7"
										 Items="{Binding Path=Item.Services}"
										 SelectedItem="{Binding SelectedServicesItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInServicesCommand}"
										 RemoveItemCommand="{Binding RemoveFromServicesCommand}"
										 Visibility="{Binding ServicesVisibility, ElementName=Root}"/>


    </Grid>
</inf:ViewBase>
