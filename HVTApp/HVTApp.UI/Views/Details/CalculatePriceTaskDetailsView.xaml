<inf:ViewBase x:Class="HVTApp.UI.Views.CalculatePriceTaskDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row ="0" Content="Блок" Visibility="{Binding ProductBlockVisibility, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="0" 
                                    Item="{Binding Item.ProductBlock}" 
                                    AddItemCommand="{Binding SelectProductBlockCommand}" 
                                    RemoveItemCommand="{Binding ClearProductBlockCommand}"
									Visibility="{Binding ProductBlockVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="1" Content="Дата" Visibility="{Binding DateVisibility, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="1" 
                    SelectedDate="{Binding Item.Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding DateVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="2" Content="Проекты" Visibility="{Binding ProjectsVisibility, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="2"
										 Items="{Binding Path=Item.Projects}"
										 SelectedItem="{Binding SelectedProjectsItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInProjectsCommand}"
										 RemoveItemCommand="{Binding RemoveFromProjectsCommand}"
										 Visibility="{Binding ProjectsVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="3" Content="Спецификации" Visibility="{Binding SpecificationsVisibility, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="3"
										 Items="{Binding Path=Item.Specifications}"
										 SelectedItem="{Binding SelectedSpecificationsItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInSpecificationsCommand}"
										 RemoveItemCommand="{Binding RemoveFromSpecificationsCommand}"
										 Visibility="{Binding SpecificationsVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="4" Content="Сумма" Visibility="{Binding SumVisibility, ElementName=Root}"/>
		<infE:XamNumericEditor Grid.Column="1" Grid.Row="4" 
                               Value="{Binding Item.Sum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							   Visibility="{Binding SumVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="5" Content="ТКП" Visibility="{Binding OffersVisibility, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="5"
										 Items="{Binding Path=Item.Offers}"
										 SelectedItem="{Binding SelectedOffersItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInOffersCommand}"
										 RemoveItemCommand="{Binding RemoveFromOffersCommand}"
										 Visibility="{Binding OffersVisibility, ElementName=Root}"/>



    </Grid>
</inf:ViewBase>
