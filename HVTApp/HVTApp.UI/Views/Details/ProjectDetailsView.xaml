<inf:ViewBase x:Class="HVTApp.UI.Views.ProjectDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row ="0" Content="Название"/>
        <TextBox Grid.Column="1" Grid.Row="0" MinWidth="200" 
                 Text="{Binding Item.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


        <Label Grid.Column="0" Grid.Row ="1" Content="Менеджер"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="1" 
                                    Item="{Binding Item.Manager}" 
                                    AddItemCommand="{Binding SelectManagerCommand}" 
                                    RemoveItemCommand="{Binding ClearManagerCommand}"/>


        <Label Grid.Column="0" Grid.Row ="2" Content="Проектные единицы"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="2"
										 Items="{Binding Path=Item.SalesUnits}"
										 SelectedItem="{Binding SelectedSalesUnitsItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInSalesUnitsCommand}"
										 RemoveItemCommand="{Binding RemoveFromSalesUnitsCommand}"/>


        <Label Grid.Column="0" Grid.Row ="3" Content="ТКП"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="3"
										 Items="{Binding Path=Item.Offers}"
										 SelectedItem="{Binding SelectedOffersItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInOffersCommand}"
										 RemoveItemCommand="{Binding RemoveFromOffersCommand}"/>


        <Label Grid.Column="0" Grid.Row ="4" Content="Тендеры"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="4"
										 Items="{Binding Path=Item.Tenders}"
										 SelectedItem="{Binding SelectedTendersItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInTendersCommand}"
										 RemoveItemCommand="{Binding RemoveFromTendersCommand}"/>


        <Label Grid.Column="0" Grid.Row ="5" Content="Заметки"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="5"
										 Items="{Binding Path=Item.Notes}"
										 SelectedItem="{Binding SelectedNotesItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInNotesCommand}"
										 RemoveItemCommand="{Binding RemoveFromNotesCommand}"/>



    </Grid>
</inf:ViewBase>
