<inf:ViewBase x:Class="HVTApp.UI.Views.DirectumTaskRouteItemDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row ="0" Content="№" Visibility="{Binding VisibilityIndexDirectumTaskRouteItem, ElementName=Root}"/>
		<infE:XamNumericEditor Grid.Column="1" Grid.Row="0"
							   ValueType="core:Int32"
                               Value="{Binding Item.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							   Visibility="{Binding VisibilityIndexDirectumTaskRouteItem, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="1" Content="Исполнитель" Visibility="{Binding VisibilityPerformerDirectumTaskRouteItem, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="1" 
                                    Item="{Binding Item.Performer}" 
                                    AddItemCommand="{Binding SelectPerformerCommand}" 
                                    RemoveItemCommand="{Binding ClearPerformerCommand}"
									Visibility="{Binding VisibilityPerformerDirectumTaskRouteItem, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="2" Content="Старт" Visibility="{Binding VisibilityStartAuthorDirectumTaskRouteItem, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="2" 
                    SelectedDate="{Binding Item.StartAuthor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityStartAuthorDirectumTaskRouteItem, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="3" Content="Приём" Visibility="{Binding VisibilityStartPerformerDirectumTaskRouteItem, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="3" 
                    SelectedDate="{Binding Item.StartPerformer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityStartPerformerDirectumTaskRouteItem, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="4" Content="Срок" Visibility="{Binding VisibilityFinishPlanDirectumTaskRouteItem, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="4" 
                    SelectedDate="{Binding Item.FinishPlan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityFinishPlanDirectumTaskRouteItem, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="5" Content="Финиш исполнителем" Visibility="{Binding VisibilityFinishPerformerDirectumTaskRouteItem, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="5" 
                    SelectedDate="{Binding Item.FinishPerformer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityFinishPerformerDirectumTaskRouteItem, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="6" Content="Финиш" Visibility="{Binding VisibilityFinishAuthorDirectumTaskRouteItem, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="6" 
                    SelectedDate="{Binding Item.FinishAuthor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityFinishAuthorDirectumTaskRouteItem, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="7" Content="Переписка" Visibility="{Binding VisibilityMessagesDirectumTaskRouteItem, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="7"
										 Items="{Binding Path=Item.Messages}"
										 SelectedItem="{Binding SelectedMessagesItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInMessagesCommand}"
										 RemoveItemCommand="{Binding RemoveFromMessagesCommand}"
										 Visibility="{Binding VisibilityMessagesDirectumTaskRouteItem, ElementName=Root}"/>



    </Grid>
</inf:ViewBase>
