<inf:ViewBase x:Class="HVTApp.UI.Views.IncomingRequestDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row ="0" Content="Запрос" Visibility="{Binding VisibilityDocumentIncomingRequest, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="0" 
                                    Item="{Binding Item.Document}" 
                                    AddItemCommand="{Binding SelectDocumentCommand}" 
                                    RemoveItemCommand="{Binding ClearDocumentCommand}"
									Visibility="{Binding VisibilityDocumentIncomingRequest, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="1" Content="Исполнители" Visibility="{Binding VisibilityPerformersIncomingRequest, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="1"
										 Items="{Binding Path=Item.Performers}"
										 SelectedItem="{Binding SelectedPerformersItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInPerformersCommand}"
										 RemoveItemCommand="{Binding RemoveFromPerformersCommand}"
										 Visibility="{Binding VisibilityPerformersIncomingRequest, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="2" Content="Дата поручения" Visibility="{Binding VisibilityInstructionDateIncomingRequest, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="2" 
                    SelectedDate="{Binding Item.InstructionDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityInstructionDateIncomingRequest, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="3" Content="Дата исполнения поручения" Visibility="{Binding VisibilityDoneDateIncomingRequest, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="3" 
                    SelectedDate="{Binding Item.DoneDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityDoneDateIncomingRequest, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="4" Content="Актуален" Visibility="{Binding VisibilityIsActualIncomingRequest, ElementName=Root}"/>
        <CheckBox Grid.Column="1" Grid.Row="4" MinWidth="200" 
                  IsChecked="{Binding Item.IsActual, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding VisibilityIsActualIncomingRequest, ElementName=Root}"/>



    </Grid>
</inf:ViewBase>
