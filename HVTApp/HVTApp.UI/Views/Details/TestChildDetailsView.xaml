<inf:ViewBase x:Class="HVTApp.UI.Views.TestChildDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row ="0" Content="Husband" Visibility="{Binding VisibilityHusbandTestChild, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="0" 
                                    Item="{Binding Item.Husband}" 
                                    AddItemCommand="{Binding SelectHusbandCommand}" 
                                    RemoveItemCommand="{Binding ClearHusbandCommand}"
									Visibility="{Binding VisibilityHusbandTestChild, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="1" Content="Name" Visibility="{Binding VisibilityNameTestChild, ElementName=Root}"/>
        <TextBox Grid.Column="1" Grid.Row="1" MinWidth="200" 
                 Text="{Binding Item.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 Visibility="{Binding VisibilityNameTestChild, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="2" Content="Wife" Visibility="{Binding VisibilityWifeTestChild, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="2" 
                                    Item="{Binding Item.Wife}" 
                                    AddItemCommand="{Binding SelectWifeCommand}" 
                                    RemoveItemCommand="{Binding ClearWifeCommand}"
									Visibility="{Binding VisibilityWifeTestChild, ElementName=Root}"/>



    </Grid>
</inf:ViewBase>
