<inf:ViewBase x:Class="HVTApp.UI.Views.ProductBlockDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row ="0" Content="Обозначение" Visibility="{Binding DesignationVisibility, ElementName=Root}"/>
        <TextBox Grid.Column="1" Grid.Row="0" MinWidth="200" 
                 Text="{Binding Item.Designation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 Visibility="{Binding DesignationVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="1" Content="Параметры" Visibility="{Binding ParametersVisibility, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="1"
										 Items="{Binding Path=Item.Parameters}"
										 SelectedItem="{Binding SelectedParametersItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInParametersCommand}"
										 RemoveItemCommand="{Binding RemoveFromParametersCommand}"
										 Visibility="{Binding ParametersVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="2" Content="Себестоимости" Visibility="{Binding PricesVisibility, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="2"
										 Items="{Binding Path=Item.Prices}"
										 SelectedItem="{Binding SelectedPricesItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInPricesCommand}"
										 RemoveItemCommand="{Binding RemoveFromPricesCommand}"
										 Visibility="{Binding PricesVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="3" Content="Специальное обозначение" Visibility="{Binding DesignationSpecialVisibility, ElementName=Root}"/>
        <TextBox Grid.Column="1" Grid.Row="3" MinWidth="200" 
                 Text="{Binding Item.DesignationSpecial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 Visibility="{Binding DesignationSpecialVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="4" Content="Сралчахвост" Visibility="{Binding StructureCostNumberVisibility, ElementName=Root}"/>
        <TextBox Grid.Column="1" Grid.Row="4" MinWidth="200" 
                 Text="{Binding Item.StructureCostNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 Visibility="{Binding StructureCostNumberVisibility, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="5" Content="Услуга" Visibility="{Binding IsServiceVisibility, ElementName=Root}"/>
        <CheckBox Grid.Column="1" Grid.Row="5" MinWidth="200" 
                  IsChecked="{Binding Item.IsService, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding IsServiceVisibility, ElementName=Root}"/>



    </Grid>
</inf:ViewBase>
