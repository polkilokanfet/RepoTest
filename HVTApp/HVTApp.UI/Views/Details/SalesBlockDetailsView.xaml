<inf:ViewBase x:Class="HVTApp.UI.Views.SalesBlockDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row ="0" Content="ChildSalesUnits" Visibility="{Binding VisibilityChildSalesUnitsSalesBlock, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="0"
										 Items="{Binding Path=Item.ChildSalesUnits}"
										 SelectedItem="{Binding SelectedChildSalesUnitsItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInChildSalesUnitsCommand}"
										 RemoveItemCommand="{Binding RemoveFromChildSalesUnitsCommand}"
										 Visibility="{Binding VisibilityChildSalesUnitsSalesBlock, ElementName=Root}"/>

        <Label Grid.Column="0" Grid.Row ="1" Content="ParentSalesUnits" Visibility="{Binding VisibilityParentSalesUnitsSalesBlock, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="1"
										 Items="{Binding Path=Item.ParentSalesUnits}"
										 SelectedItem="{Binding SelectedParentSalesUnitsItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInParentSalesUnitsCommand}"
										 RemoveItemCommand="{Binding RemoveFromParentSalesUnitsCommand}"
										 Visibility="{Binding VisibilityParentSalesUnitsSalesBlock, ElementName=Root}"/>


    </Grid>
</inf:ViewBase>
