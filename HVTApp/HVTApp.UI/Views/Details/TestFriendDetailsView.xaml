<inf:ViewBase x:Class="HVTApp.UI.Views.TestFriendDetailsView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  xmlns:infDP="http://infragistics.com/DataPresenter"
			  xmlns:infE="http://infragistics.com/Editors"
			  xmlns:core="clr-namespace:System;assembly=mscorlib"
              xmlns:controls="clr-namespace:HVTApp.UI.Controls"
			  x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row ="0" Content="Birthday" Visibility="{Binding VisibilityBirthday, ElementName=Root}"/>
        <DatePicker Grid.Column="1" Grid.Row="0" 
                    SelectedDate="{Binding Item.Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Visibility="{Binding VisibilityBirthday, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="1" Content="Emails" Visibility="{Binding VisibilityEmails, ElementName=Root}"/>
        <controls:ChooseItemsListControl Grid.Column="1" Grid.Row="1"
										 Items="{Binding Path=Item.Emails}"
										 SelectedItem="{Binding SelectedEmailsItem, Mode=TwoWay}"
										 AddItemCommand="{Binding AddInEmailsCommand}"
										 RemoveItemCommand="{Binding RemoveFromEmailsCommand}"
										 Visibility="{Binding VisibilityEmails, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="2" Content="FirstName" Visibility="{Binding VisibilityFirstName, ElementName=Root}"/>
        <TextBox Grid.Column="1" Grid.Row="2" MinWidth="200" 
                 Text="{Binding Item.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 Visibility="{Binding VisibilityFirstName, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="3" Content="FriendGroupId" Visibility="{Binding VisibilityFriendGroupId, ElementName=Root}"/>
		<infE:XamNumericEditor Grid.Column="1" Grid.Row="3"
							   ValueType="core:Int32"
                               Value="{Binding Item.FriendGroupId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							   Visibility="{Binding VisibilityFriendGroupId, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="4" Content="IsDeveloper" Visibility="{Binding VisibilityIsDeveloper, ElementName=Root}"/>
        <CheckBox Grid.Column="1" Grid.Row="4" MinWidth="200" 
                  IsChecked="{Binding Item.IsDeveloper, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding VisibilityIsDeveloper, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="5" Content="LastName" Visibility="{Binding VisibilityLastName, ElementName=Root}"/>
        <TextBox Grid.Column="1" Grid.Row="5" MinWidth="200" 
                 Text="{Binding Item.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 Visibility="{Binding VisibilityLastName, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="6" Content="TestFriendAddress" Visibility="{Binding VisibilityTestFriendAddress, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="6" 
                                    Item="{Binding Item.TestFriendAddress}" 
                                    AddItemCommand="{Binding SelectTestFriendAddressCommand}" 
                                    RemoveItemCommand="{Binding ClearTestFriendAddressCommand}"
									Visibility="{Binding VisibilityTestFriendAddress, ElementName=Root}"/>


        <Label Grid.Column="0" Grid.Row ="7" Content="TestFriendGroup" Visibility="{Binding VisibilityTestFriendGroup, ElementName=Root}"/>
        <controls:ChooseItemControl Grid.Column="1" Grid.Row="7" 
                                    Item="{Binding Item.TestFriendGroup}" 
                                    AddItemCommand="{Binding SelectTestFriendGroupCommand}" 
                                    RemoveItemCommand="{Binding ClearTestFriendGroupCommand}"
									Visibility="{Binding VisibilityTestFriendGroup, ElementName=Root}"/>



    </Grid>
</inf:ViewBase>
