<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.UI.Tabs.TabCRUD"
             Header="Редактирование">
    <infRib:RibbonGroup Caption="Form">
        <infRib:ButtonTool Caption="Создать" Command="{Binding NewItemCommand}"/>
        <infRib:ButtonTool Caption="Изменить" Command="{Binding EditItemCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveItemCommand}"/>
    </infRib:RibbonGroup>
    <infRib:RibbonGroup>
        <infRib:ButtonTool Caption="Refresh" Command="{Binding RefreshCommand}"/>
    </infRib:RibbonGroup>
</inf:RibbonTabItemWithViewModel>