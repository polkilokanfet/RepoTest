                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.UI.Tabs.TabDesignDepartments"
                                 Header="Департамент ОГК">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Дубль департамента" Command="{Binding CopyDesignDepartmentCommand}" SmallImage="/HVTApp.UI;component/Images/add.png"/>
        <infRib:ButtonTool Caption="Копировать персонал" Command="{Binding CopyStaffCommand}" SmallImage="/HVTApp.UI;component/Images/add.png"/>
