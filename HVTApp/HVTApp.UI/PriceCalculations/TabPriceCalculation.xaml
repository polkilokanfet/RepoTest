<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.UI.PriceCalculations.TabPriceCalculation"
             Header="Задание на расчет себестоимости">

    <infRib:RibbonGroup Caption="Сралчахвост" Visibility="{Binding CurrentUserIsManager, Converter={StaticResource BooleanToVisibilityConverter}}">
        <infRib:ButtonTool Caption="Добавить" Command="{Binding AddStructureCostCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveStructureCostCommand}" SmallImage="/HVTApp.Infrastructure;component/Images/Delete_16x16.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Оборудование" Visibility="{Binding CurrentUserIsManager, Converter={StaticResource BooleanToVisibilityConverter}}">
        <infRib:ButtonTool Caption="Добавить" Command="{Binding AddGroupCommand}"/>
        <infRib:ButtonTool Caption="Удалить" Command="{Binding RemoveGroupCommand}" SmallImage="/HVTApp.Infrastructure;component/Images/Delete_16x16.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Задача">
        <infRib:ButtonTool Caption="Стартовать" Command="{Binding StartCommand}" Visibility="{Binding CurrentUserIsManager, Converter={StaticResource BooleanToVisibilityConverter}}" SmallImage="/HVTApp.Infrastructure;component/Images/Save_16x16.png"/>
        <infRib:ButtonTool Caption="Остановить" Command="{Binding CancelCommand}" Visibility="{Binding CurrentUserIsManager, Converter={StaticResource BooleanToVisibilityConverter}}" SmallImage="/HVTApp.Infrastructure;component/Images/Delete_16x16.png"/>
        <infRib:ButtonTool Caption="Завершить" Command="{Binding FinishCommand}" Visibility="{Binding CurrentUserIsPricer, Converter={StaticResource BooleanToVisibilityConverter}}" SmallImage="/HVTApp.Infrastructure;component/Images/Delete_16x16.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveCommand}" SmallImage="/HVTApp.Infrastructure;component/Images/Save_16x16.png"/>
        <infRib:ButtonTool Caption="Закрыть" Command="{Binding GoBackCommand}" SmallImage="/HVTApp.Infrastructure;component/Images/Delete_16x16.png"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
