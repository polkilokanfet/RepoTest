<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.UI.Specifications.TabSpecifications"
                                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                 xmlns:specifications="clr-namespace:HVTApp.UI.Specifications"
                                 mc:Ignorable="d"
                                 d:DataContext="{d:DesignInstance specifications:SpecificationsViewModelBase, IsDesignTimeCreatable=True}"
                                 Header="Спецификации">

    <infRib:RibbonGroup Caption="Сканированная копия">
        <infRib:ButtonTool Caption="Открыть" Command="{Binding OpenScanCommand}" SmallImage="/HVTApp.UI;component/Images/out.png"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>