<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.UI.EngineeringDepartmentTasksQueue.Views.Tabs.TabEngineeringDepartmentTasksQueueAdmin"
             Header="Приоритет">

    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Перезагрузить" 
                           Command="{Binding ReloadCommand}" 
                           SmallImage="/HVTApp.UI;component/Images/refresh.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Приоритет проработки">
        <infRib:ButtonTool Caption="Повысить" 
                           Command="{Binding PriorityUpCommand}" 
                           SmallImage="/HVTApp.UI;component/Images/arrow_back.png"/>
        <infRib:ButtonTool Caption="Понизить" 
                           Command="{Binding PriorityDownCommand}" 
                           SmallImage="/HVTApp.UI;component/Images/arrow_forward.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Приоритет проработки">
        <infRib:ButtonTool Caption="Повысить максимально" 
                           Command="{Binding PriorityUpToTopCommand}" 
                           SmallImage="/HVTApp.UI;component/Images/arrow_back.png"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
