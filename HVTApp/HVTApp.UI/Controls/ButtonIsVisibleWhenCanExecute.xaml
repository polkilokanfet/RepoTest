<UserControl x:Class="HVTApp.UI.Controls.ButtonIsVisibleWhenCanExecute"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Button 
        Content="{Binding Text, ElementName=Root}"
        Command="{Binding Command, ElementName=Root}"
        Visibility="{Binding Command.IsVisible, ElementName=Root, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

</UserControl>
