<UserControl x:Class="HVTApp.UI.Controls.ChooseItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <DockPanel>
        <Button DockPanel.Dock="Right" Command="{Binding RemoveItemCommand, ElementName=Root}" MinWidth="25">X</Button>
        <Button DockPanel.Dock="Right" Command="{Binding AddItemCommand, ElementName=Root}" MinWidth="25">...</Button>
        <TextBox MinWidth="150" Text="{Binding Item, ElementName=Root, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></TextBox>
    </DockPanel>
</UserControl>
