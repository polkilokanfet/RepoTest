<inf:RibbonTabItemWithViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:infRib="http://infragistics.com/Ribbon" 
             xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
             x:Class="HVTApp.UI.TaskInvoiceForPayment1.List.TabTaskInvoiceForPaymentListView"
             Header="Задачи на формирование счетов на оплату">

    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Перезагрузить" 
                           Command="{Binding LoadCommand}" 
                           SmallImage="/HVTApp.UI;component/Images/refresh.png"/>
    </infRib:RibbonGroup>

    <infRib:RibbonGroup Caption="Показывать">
        <infRib:CheckBoxTool Caption="Только актуальное сейчас" 
                             IsChecked="{Binding IsShownActual}"/>
    </infRib:RibbonGroup>

</inf:RibbonTabItemWithViewModel>
