<Window x:Class="HVTApp.Services.GetProductService.SelectProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HVTApp.Services.GetProductService"
        Title="Параметры оборудования" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Новое" Click="ButtonNew_OnClick"/>
                <Button Content="Ok" Click="ButtonOk_OnClick"/>
            </StackPanel>
            <local:SelectProductView DataContext="{Binding}"/>
        </DockPanel>
    </ScrollViewer>
</Window>
