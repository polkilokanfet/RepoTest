<UserControl x:Class="HVTApp.Services.GetProductService.SelectProductBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HVTApp.Services.GetProductService">
    
    <GroupBox Header="{Binding SelectedBlock, UpdateSourceTrigger=PropertyChanged}" Margin="10" HorizontalAlignment="Stretch">

        <ItemsControl ItemsSource="{Binding ParameterSelectors}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:SelectParameterControl DataContext="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </GroupBox>
    
</UserControl>
