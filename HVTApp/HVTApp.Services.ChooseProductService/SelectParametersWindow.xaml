<Window x:Class="HVTApp.Services.ChooseProductService.SelectParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HVTApp.Services.ChooseProductService"
        Title="SelectParametersWindow" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical">
        <ItemsControl ItemsSource="{Binding UnionsOfParameters}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Path=Group.Name}"/>
                        <ComboBox ItemsSource="{Binding Path=ParametersToSelect}" SelectedItem="{Binding Path=SelectedParameter, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Content="{Binding Path=Value}"></Label>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ListBox ItemsSource="{Binding SelectedParameters}"/>
        <Button>Ok</Button>
    </StackPanel>
</Window>
