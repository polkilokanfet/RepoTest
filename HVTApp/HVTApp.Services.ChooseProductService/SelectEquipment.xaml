<UserControl x:Class="HVTApp.Services.GetProductService.SelectEquipment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVTApp.Services.GetProductService"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <local:SelectProduct ParametersToSelect="{Binding ProductToSelect.ParametersToSelect}"/>
        <ItemsControl ItemsSource="{Binding EquipmentsToSelect}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:SelectEquipment/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
