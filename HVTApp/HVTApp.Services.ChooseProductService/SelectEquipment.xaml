<UserControl x:Class="HVTApp.Services.GetProductService.SelectEquipment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HVTApp.Services.GetProductService">

    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></local:BooleanToVisibilityConverter>
    </UserControl.Resources>

    <Border BorderThickness="1" BorderBrush="Black" Margin="2">
        <StackPanel Orientation="Vertical">
            
            <Label Content="{Binding ProductSelector.SelectedProduct, UpdateSourceTrigger=PropertyChanged}"/>
            
            <ItemsControl ItemsSource="{Binding ProductSelector.ParameterSelectors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                    Visibility="{Binding Path=IsActual, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Label Content="{Binding Group.Name}"/>
                            <ComboBox ItemsSource="{Binding ParametersWithActualFlag}"
                                      SelectedItem="{Binding SelectedParameterWithActualFlag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    Visibility="{Binding Path=IsActual, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Label Content="{Binding Parameter}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            
            <Label Content="Составные части:"/>
            <ItemsControl ItemsSource="{Binding EquipmentSelectors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:SelectEquipment DataContext="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
        </StackPanel>
    </Border>
</UserControl>
