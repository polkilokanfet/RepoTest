<Window x:Class="HVTApp.Services.SelectService.SelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Title="Select Window">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ContentControl Name="ContentControl"></ContentControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CreateNewButton" Margin="4,4,2,4"> <TextBlock Text="Создать" Margin="2"/> </Button>
            <Button Name="SelectButton" Margin="2,4,4,4"> <TextBlock Text="Выбрать" Margin="2"/></Button>
        </StackPanel>
        
    </Grid>
</Window>
