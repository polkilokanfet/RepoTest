<Window x:Class="HVTApp.Services.SelectService.SelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Title="Select Window"
        WindowStartupLocation="CenterScreen">
    <!--Width="1024" Height="768"
        MaxWidth="1024" MaxHeight="768"
        MinWidth="640" MinHeight="480">-->
    <!--WindowState="Maximized">-->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CreateNewButton" Content="Создать" Padding="20,5" Margin="4,4,2,4"/>
            <Button Name="SelectButton" Content="Выбрать" Padding="20,5" Margin="2,4,4,4" IsDefault="True"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1">
            <ContentControl Name="ContentControl"/>
        </ScrollViewer>
        
    </Grid>
    
</Window>
