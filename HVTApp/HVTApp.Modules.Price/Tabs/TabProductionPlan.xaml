<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.Modules.PlanAndEconomy.Tabs.TabProductionPlan"
                                 Header="Заказ">
    
    <infRib:RibbonGroup Caption="Заводской заказ">
        <infRib:ButtonTool Caption="Создать" Command="{Binding NewOrderCommand}" SmallImage="/HVTApp.Modules.PlanAndEconomy;component/Images/Add_16x16.png"/>
        <infRib:ButtonTool Caption="Редактировать" Command="{Binding EditOrderCommand}" SmallImage="/HVTApp.Modules.PlanAndEconomy;component/Images/Edit_16x16.png"/>
    </infRib:RibbonGroup>
               
</inf:RibbonTabItemWithViewModel>