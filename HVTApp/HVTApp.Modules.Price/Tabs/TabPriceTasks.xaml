<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.Modules.PlanAndEconomy.Tabs.TabPriceTasks"
                                 Header="Прайсы">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Обновить" Command="{Binding ReloadCommand}" SmallImage="/HVTApp.Modules.Price;component/Images/Refresh_16x16.png"/>
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveCommand}" SmallImage="/HVTApp.Modules.Price;component/Images/Save_16x16.png"/>
    </infRib:RibbonGroup>
    
    <infRib:RibbonGroup Caption="Продукт">
        <infRib:ButtonTool Caption="Блок в контексте" Command="{Binding PrintBlockInContext}"/>
    </infRib:RibbonGroup>
        
</inf:RibbonTabItemWithViewModel>