<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.Modules.PlanAndEconomy.Tabs.TabPaymentDocuments"
                                 Header="План поступлений">
       
    <infRib:RibbonGroup Caption="Документы">
        <infRib:ButtonTool Caption="Создать" Command="{Binding CreatePaymentDocumentCommand}" SmallImage="/HVTApp.Modules.PlanAndEconomy;component/Images/Add_16x16.png"/>
        <infRib:ButtonTool Caption="Изменить" Command="{Binding EditPaymentDocumentCommand}" SmallImage="/HVTApp.Modules.PlanAndEconomy;component/Images/Edit_16x16.png"/>
    </infRib:RibbonGroup>
        
</inf:RibbonTabItemWithViewModel>