<inf:RibbonTabItemWithViewModel  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:infRib="http://infragistics.com/Ribbon" 
                                 xmlns:inf="clr-namespace:HVTApp.Infrastructure;assembly=HVTApp.Infrastructure"
                                 x:Class="HVTApp.Modules.Price.Tabs.TabPaymentDocuments"
                                 Header="План поступлений">
    
    <infRib:RibbonGroup Caption="Действия">
        <infRib:ButtonTool Caption="Перезагрузить" Command="{Binding ReloadCommand}"/>
        <infRib:ButtonTool Caption="Сохранить" Command="{Binding SaveCommand}"/>
        <infRib:ButtonTool Caption="Добавить" Command="{Binding AddPaymentCommand}"/>
    </infRib:RibbonGroup>
    <infRib:RibbonGroup Caption="Документы">
        <infRib:ButtonTool Caption="Создать" Command="{Binding NewItemCommand}"/>
        <infRib:ButtonTool Caption="Изменить" Command="{Binding EditItemCommand}"/>
    </infRib:RibbonGroup>
        
</inf:RibbonTabItemWithViewModel>